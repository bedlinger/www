---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import type { UI } from "../types";

interface Props {
	header: UI["header"];
}
const { header } = Astro.props;
---

<nav
	aria-label="Primary"
	class="sticky top-0 z-50 h-16 w-full bg-transparent p-5 px-8 lg:px-16"
>
	<div class="flex flex-row items-center justify-center lg:justify-between">
		<a class="hidden lg:inline-block" href="/" aria-label="Homepage">
			<Image src={logo} alt="Benjamin Edlinger Logo" width="50" height="50" />
		</a>

		<ul
			class="mb-0 flex list-none flex-row items-center justify-evenly divide-x-2 divide-white rounded-4xl border-2 px-1 py-2 pl-0 text-xs backdrop-blur-3xl sm:text-base md:text-lg lg:text-xl"
		>
			{
				header.nav.map((item) => (
					<li class="mb-0">
						<a
							href={item.href}
							class="hover:text-primary-500/80 block px-4 py-2 text-white no-underline transition"
						>
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</div>
</nav>
