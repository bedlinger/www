---
import type { UI } from "../types";

interface Props {
	hero: UI["index"]["hero"];
}
const { hero } = Astro.props;
---

<section class="relative bg-[url(../assets/background.jpg)] bg-cover bg-center">
	<div class="absolute h-full w-full backdrop-blur-md backdrop-brightness-50">
	</div>
	<div class="z-1 flex flex-col items-center justify-center">
		<h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl">
			{hero.title}
		</h1>
		<p class="mx-2 text-center xl:max-w-7/12">
			{hero.text}
		</p>
	</div>
</section>
