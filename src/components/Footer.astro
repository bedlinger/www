---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-950 p-6">
	<div class="mx-auto max-w-7xl">
		<div
			class="flex flex-col items-center justify-between gap-5 md:flex-row md:gap-6"
		>
			<h3 class="hidden md:mb-0 md:inline-block">Benjamin Edlinger</h3>

			<button
				class="text-primary-300 transition-colors duration-300 hover:cursor-pointer hover:text-white"
				onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
			>
				<span>Back to top</span>
			</button>

			<SocialLinks />
		</div>

		<div
			class="border-primary-700 text-primary-300 mt-8 flex flex-col items-center border-t pt-4 text-center text-sm"
		>
			<span>&copy; {currentYear} Benjamin Edlinger. All rights reserved.</span>
		</div>
	</div>
</footer>
