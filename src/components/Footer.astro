---
import type { UI } from "../types";
import { Icon } from "astro-icon/components";
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();

interface Props {
	footer: UI["footer"];
}
const { footer } = Astro.props;
---

<footer class="bg-primary-950 p-6">
	<div class="mx-auto max-w-7xl">
		<div class="flex flex-col items-center justify-between gap-6 md:flex-row">
			<a class="button" href={footer.language.href}>
				<div class="flex flex-row items-center gap-1.5 md:gap-2.5 lg:gap-2">
					<Icon name="language" class="md:lg-7 h-6 w-6 md:h-7 lg:h-8 lg:w-8" />
					<span>{footer.language.text}</span>
				</div>
			</a>

			<a
				class="text-primary-300 text-lg no-underline transition-colors hover:text-white"
				href="#"
			>
				{footer.backToTop}
			</a>

			<SocialLinks />
		</div>

		<div class="border-primary-700 mt-8 flex border-t pt-4">
			<p class="text-primary-300 w-full text-center text-sm">
				&copy; {currentYear} Benjamin Edlinger. {footer.legal}.
			</p>
		</div>
	</div>
</footer>
