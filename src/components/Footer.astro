---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-950 p-6">
	<div class="mx-auto max-w-7xl">
		<div
			class="flex flex-col items-center justify-between gap-5 md:flex-row md:gap-6"
		>
			<p class="hidden md:inline-block md:font-bold">Benjamin Edlinger</p>

			<a
				class="text-primary-300 no-underline transition-colors duration-300 hover:text-white"
				href="/#"
			>
				Back to top
			</a>

			<SocialLinks />
		</div>

		<div class="border-primary-700 mt-8 flex border-t pt-4">
			<p class="text-primary-300 w-full text-center text-sm">
				&copy; {currentYear} Benjamin Edlinger. All rights reserved.
			</p>
		</div>
	</div>
</footer>
