---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-900 p-6 text-white">
	<div class="mx-auto max-w-7xl">
		<div class="flex flex-col items-center justify-between gap-6 md:flex-row">
			<div class="flex flex-col items-center md:flex-1 md:items-start">
				<h3 class="text-2xl font-bold">Benjamin Edlinger</h3>
			</div>

			<button
				class="text-primary-300 flex items-center gap-2 transition-colors duration-300 hover:text-white lg:hover:cursor-pointer"
				onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
			>
				<span>Back to top</span>
			</button>

			<div class="flex flex-col items-center gap-4 md:flex-1 md:items-end">
				<SocialLinks />
			</div>
		</div>

		<div
			class="border-primary-700 text-primary-300 mt-8 flex flex-col items-center border-t pt-4 text-center text-sm"
		>
			<span>&copy; {currentYear} Benjamin Edlinger. All rights reserved.</span>
		</div>
	</div>
</footer>
